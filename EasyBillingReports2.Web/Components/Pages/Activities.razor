@page "/period/{Id:int}"

<p>selected id: @Id</p>

<RadzenListBox @bind-Value=@value Data=@companyNames Style="width:40vw; height: calc(100vh - 110px);" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select company" }})" />



@code {
    string value = "Around the Horn";
    IEnumerable<string> companyNames;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        companyNames = new List<string>()
        {
            "One",
            "Two",
            "Three"
        };
    }
}