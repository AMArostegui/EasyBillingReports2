@rendermode InteractiveServer
@inject NavigationManager Navigator

<RadzenStack Style="background-color: lightgray; height: 100%; padding-left: 20px; padding-right: 20px "
    Orientation="Radzen.Orientation.Horizontal" AlignItems="Radzen.AlignItems.Center" JustifyContent="Radzen.JustifyContent.Start">
    <RadzenDropDown @bind-Value=@value Data=@companyNames Style="width: 100%; max-width: 400px;" Name="DropDownBindValue" />
    <RadzenStack Orientation="Radzen.Orientation.Horizontal" JustifyContent="Radzen.JustifyContent.Start">
        <RadzenButton ButtonStyle="ButtonStyle.Light" Click="@OnPrevButtonClicked"> &lt; Prev</RadzenButton>
        <RadzenButton ButtonStyle="ButtonStyle.Light" Click="@OnNextButtonClicked">Next &gt; </RadzenButton>
    </RadzenStack>
</RadzenStack>