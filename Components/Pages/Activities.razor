<RadzenListBox @bind-Value=@value Data=@companyNames Style="width:40vw; height: calc(80vh - 30px);" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select company" }})" />

@code {
    string value = "Around the Horn";
    IEnumerable<string> companyNames;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        companyNames = new List<string>()
        {
            "One",
            "Two",
            "Three"
        };
    }
}